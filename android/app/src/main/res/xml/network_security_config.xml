<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration par dÃ©faut: HTTPS uniquement en production -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Configuration debug: autoriser HTTP pour le serveur Coqui local uniquement en debug -->
    <debug-overrides>
        <domain-config cleartextTrafficPermitted="true">
            <!-- Serveur Coqui VPS -->
            <domain includeSubdomains="false">168.231.112.71</domain>
            <!-- Localhost pour dev -->
            <domain includeSubdomains="false">localhost</domain>
            <domain includeSubdomains="false">10.0.2.2</domain>
            <!-- Flutter dev tools -->
            <domain includeSubdomains="false">127.0.0.1</domain>
        </domain-config>
    </debug-overrides>
</network-security-config>